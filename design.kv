#:kivy 1.0
<LoginScreen>:
    GridLayout:
    # set number of columns to 1
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.login(root.ids.username.text, root.ids.password.text)
            Label:
                id: login_failed
                text: ''
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"
            Button:
                text: "Sign Up"
                ## on press, call the sign_up method of the root(LoginScreen)
                on_press: root.sign_up()

<SignUpScreen>:
    GridLayout:
        cols: 1
        Label:
            text: 'Sign Up To Proceed'
        TextInput:
            id: username
            hint_text: 'Username'
        TextInput:
            id: password
            hint_text: 'Password'
        Button:
            text: 'Submit'
            ## on press, call the add_user function of the SignUpScreen class and pass in parameters using the id
            on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<SignUpScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: 'Sign Up Successful!'
        Button:
            text: 'Login Page'
            on_press: root.go_to_login()

<LoginScreenSuccess>:
    GridLayout:
        cols:1
        Button: 
            text: "Logout"
            on_press: root.log_out()
        Label:
            text: 'How do you feel?'
        TextInput:
            id: mood
            hint_text: 'Try: happy, sad, unloved...'
        Button:
            text: 'Cheer Me!'
            on_press: root.get_quote(root.ids.mood.text)
        Label:
            id: quote
            text: ""

## main widget
<RootWidget>:
    LoginScreen:
        name: 'Login_screen'
    SignUpScreen:
        name: 'Sign_up_screen'
    SignUpScreenSuccess:
        name: 'sign_up_screen_success'
    LoginScreenSuccess:
        name: 'Login_screen_success'